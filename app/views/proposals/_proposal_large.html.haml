.proposal
  .votes
    .votes_text=proposal.score
    score
  .votes
    .votes_text=proposal.enabled_votes
    votes
  .proposal_summary
    =link_to h(proposal.title), proposal_path(proposal)
    .proposal_tags
      .status_tag= proposal.state.name
      - proposal.tags.map{|t|t.name}.each do |tag| 
        .tag=link_to tag, "/tags/#{tag}"
    .proposal_author
      submitted by 
      =character(proposal.character)